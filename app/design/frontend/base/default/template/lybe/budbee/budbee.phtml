        <?php if ($isOutsideDoor) : ?>
            <label for="budbee_outside_door"> <?php echo $this->__("Outside Door") ?></label>
            <span class="input-box">
                 <select  name="budbee_outside_door">
                     <option value='0'><?php echo $this->__('No');?></option>
                     <option value='1'><?php echo $this->__('Yes');?></option>
                 </select>
            </span>
        <?php endif; ?>
        <label for="budbee_additional_info"> <?php echo $this->__("Additional information") ?></label>
        <span class="input-box">
            <textarea name="budbee_additional_info" ></textarea>
        </span>
    </li>
</ul>
